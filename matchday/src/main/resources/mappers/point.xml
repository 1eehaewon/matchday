<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <!-- point.xml -->
 
 <mapper namespace="point">
     <!-- 포인트 적립 내역 조회 쿼리 -->
    <select id="getPointHistoryList" resultType="kr.co.matchday.point.PointHistoryDTO">
        SELECT
            pointhistoryid,
            userid,
            pointcategoryid,
            pointtype,
            reviewid,
            pointsource,
            pointamount,
            pointcreationdate,
            pointusedate
        FROM
            pointhistory
        WHERE
            userid = #{userid}
        ORDER BY
            pointhistoryid DESC
    </select>
    
</mapper>